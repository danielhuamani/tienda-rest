body, html
	margin 0
	padding 0
	height 100%
figure
	margin 0
.container
	width 100%
	height 100%
	.opcion
		text-align center
		height 50%
		background-size cover
		.logo
			position absolute
			top 20px
			left 0
			right 0
			margin auto
			z-index 20

		.capa-texto
			background rgba(0,0,0,0.4)
			height 100%
			display flex
			align-items center
			justify-content center
			flex-direction column
			.texto
				width 70%
				h2
					margin 0
					color white
					font-size 22px
				p
					color white
					font-size 16px
	#catalogo
		position relative
		background-image url("../img/home_catalogo.jpg")
	#experiencia
		background-image url("../img/home_experiencias.jpg")
